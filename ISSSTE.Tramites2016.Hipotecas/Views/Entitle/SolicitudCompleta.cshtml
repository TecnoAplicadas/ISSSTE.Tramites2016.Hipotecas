<div class="container" style="margin-top: -2px;">
    <div class="row">
        <div class="col-xs-12 col-sm-8">
            <ol class="breadcrumb  col-md-8" id="nave">
                <li><a href="http://www.gob.mx"><i class="icon icon-home"></i></a><i id="navinicio" class="active"><a href="#{{nc.homeUrl}}"></a></i></li>
                <li id="navinicio"><a href="#{{nc.homeUrl}}">Inicio</a></li>
                <li class="active">Ver detalle</li>
            </ol>
        </div>
        <div class="col-xs-12 col-sm-4">
            @Html.Partial("_InfoUsuario", new { UserName = ViewBag.NameDH })
        </div>



        <div class="hidden-xs col-xs-8 ">
            <h2 class="vertical-buffer">@ViewBag.Title</h2>

        </div>

        <div class="row">
            <div class="hidden-xs hidden-if hidden-sm col-md-12 col-lg-12">
                <div class="row">
                    <div class="hidden-xs hidden-if hidden-sm col-md-12 col-lg-12 ">
                        <div class="col-md-9">
                            <div class="btn-group text-center bottom-buffer" role="group" aria-label="...">

                                <a role="button" class="btn btn-default" onclick="Mostrar()"
                                   href="@Url.Action("Index", "Entitle", new { NoIssste = @ViewBag.NoIssste })" data-toggle="tooltip"
                                   data-placement="bottom" style="padding: 10px 20px;">
                                    <span class="icon-home " aria-hidden="true"></span>&nbsp;Inicio
                                </a>
                                <a role="button" class="btn btn-default" onclick="Mostrar()"
                                   href="@Url.Action("About", "Entitle", new { NoIssste = @ViewBag.NoIssste })" data-toggle="tooltip"
                                   data-placement="bottom" style="padding: 10px 20px;">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>&nbsp;Acerca del trámite
                                </a>
                                <a role="button" class="btn btn-default" onclick="Mostrar()"
                                   href="@Url.Action("Solicitud", "Entitle", new { NoIssste = @ViewBag.NoIssste })" data-toggle="tooltip"
                                   data-placement="bottom" style="padding: 10px 20px;">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;Registrar solicitud
                                </a>
                                <a role="button" class="btn btn-default" onclick="Mostrar()"
                                   href="@Url.Action("Historial", "Entitle", new { NoIssste = @ViewBag.NoIssste })" data-toggle="tooltip"
                                   data-placement="bottom" style="padding: 10px 20px;">
                                    <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>&nbsp;Ver mis solicitudes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <div class="row">
        <div id="requisitos">


            <div class="col-xs-12">
                <h3>Datos de tu solicitud</h3>
                <hr class="red" />
            </div>

            @{
                <input type="hidden" id="hidden" name="hidden" value="@(ViewBag.NoIssste ?? String.Empty)" />

                <div class="form-group col-if-12 col-md-12 row">
                    <div class="form-group col-if-12 col-md-4">
                        <label class="control-label">Folio:</label>
                        <input type="text" value="@ViewBag.FolioT" class="form-control" disabled />
                        @*<!--@Html.TextBoxFor(requestData => requestData.Item2.Folio, new { @class = "form-control", disabled = "disabled" })-->*@
                    </div>
                    <div class="form-group col-if-12 col-md-4">
                        <label class="control-label">Tipo de crédito:</label>
                        @if (Model.Item2.IsConjugalCredit)
                        {
                            @Html.TextBox("Conyugal", "Conyugal", new { disabled = "true", @class = "form-control" })
                        }
                        else
                        {
                            @Html.TextBox("Individual", "Individual", new { disabled = "true", @class = "form-control" })
                        }
                    </div>
                    <div class="form-group col-if-12 col-md-4" style="margin-top: 40px;"><hr /></div>
                </div>

                <div class="form-group col-if-12 col-md-12 col-xs-12">
                    <label class="control-label">Datos de ubicación como aparece en tu escritura:</label>
                    @Html.TextAreaFor(requestData => requestData.Item2.WritingProperty, 9, 35, new { @class = "form-control", style = "width: 100%; max-width: 100%;", disabled = "disabled" })

                    </div>


                    <div class="form-group col-xs-12">
                        <h3>Datos personales</h3>
                        <hr class="red">
                    </div>
                    <div class="form-group col-if-12 col-md-4">
                        <label class="control-label">Nombre(s):</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.Name, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-md-4">
                        <label class="control-label">Primer apellido:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.PaternalLastName, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-md-4">
                        <label class="control-label">Segundo apellido:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.MaternalLastName, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-sm-12 col-md-6 col-lg-4">
                        <label class="control-label">Sexo:</label>

                        @Html.TextBoxFor(tuple => tuple.Item1.Gender, new { @class = "form-control", disabled = "disabled" })

                    </div>
                    <div class="form-group col-if-12 col-sm-12 col-md-6 col-lg-4">
                        <label class="control-label">Fecha de nacimiento:</label>

                        @Html.TextBoxFor(tuple => tuple.Item1.Birthdate, "{0:dd-MM-yyyy}", new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-sm-12 col-md-6 col-lg-4">
                        <label class="control-label">Lugar de nacimiento:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.Birthplace, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-sm-12 col-md-6 col-lg-4">
                        <label class="control-label">Estado civil:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.MaritalStatus, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-md-8" style="margin-top: 40px;"><hr /></div>
                    <div class="form-group col-xs-12">
                        <h3>Dirección</h3>
                        <hr class="red">
                    </div>
                    <div class="form-group col-if-12 col-sm-12 col-md-6 col-lg-4">
                        <label class="control-label">Código postal:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.ZipCode, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-xs-4">
                        <label class="control-label">Municipio o Alcaldía:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.City, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-md-4">
                        <label class="control-label">Colonia:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.Colony, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-sm-12 col-md-6 col-lg-4">
                        <label class="control-label">Calle:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.Street, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-6 col-md-2">
                        <label class="control-label">Número exterior:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.NumExt, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-6 col-md-2">
                        <label class="control-label">Número interior:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.NumInt, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group col-if-12 col-md-4" style="margin-top: 40px;"><hr /></div>
                    <div class="col-md-12">

                    </div>

                    <div class="form-group col-xs-12">
                        <h3>Datos de contacto</h3>
                        <hr class="red">
                    </div>
                    <input type="hidden" id="hidden" name="hidden" value="@(ViewBag.NoIssste ?? String.Empty)" />
                    <div class="form-group col-xs-1">
                        <label for="lada">
                            Lada
                            :
                        </label>
                        @Html.TextBoxFor(tuple => tuple.Item1.Lada, new { @id = "Lada", @name = "Lada", @class = "form-control", disabled = "disabled" })

                    </div>
                    <div class="form-group col-xs-3">
                        <label for="telefono">Teléfono fijo:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.Telephone, new { @id = "Telefono", @name = "Telefono", @class = "form-control", disabled = "disabled" })

                    </div>
                    <div class="form-group col-xs-4">
                        <label for="correo">Correo electrónico:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.Email, new { @id = "Correo", @name = "Correo", @class = "form-control", disabled = "disabled" })

                    </div>
                    <div class="form-group col-xs-4">
                        <label for="correo">Teléfono móvil:</label>
                        @Html.TextBoxFor(tuple => tuple.Item1.MobilePhone, new { @id = "MobilePhone", @name = "MobilePhone", @class = "form-control", disabled = "disabled" })

                    </div>
                    }


                </div>

        <div class="clearfix " style="margin-bottom: 50px; margin-left: -10px; margin-top: 20px;">
            <div class="col-xs-12 pull-right">
                <br />

                <a id="printButton" class="btn btn-default pull-right" type="button" onclick="javascript:imprSelec('requisitos')">
                    <span class="icon-printing" aria-hidden="true"></span>
                    Imprimir
                </a>
                <!--Se agrego llamada a la función para mostrar la ventana Trabajando en ello-->
                <a role="button" class="btn btn-primary pull-right" style="margin-right: 4px;margin-top: 1px;" target="_blank"
                   href="@Url.Action("DownloadDocumentMortgageCancel", "Entitle", new { RequestId = @ViewBag.RequestId })">
                    Imprimir Carta
                </a>
            </div>
        </div>

        <!-- End Trámite -->
        <!-- End tramite pensiones -->
    </div><!-- container -->
</div>
<script type="text/javascript">
    function imprSelec(requisitos)
    { var ficha = document.getElementById(requisitos); var ventimp = window.open(' ', 'popimpr'); ventimp.document.write(ficha.innerHTML); ventimp.document.close(); ventimp.print(); ventimp.close(); }

    $(window).load(function () { Oculta(); });
</script>

@section Scripts{

    @Scripts.Render("~/bundles/entitle/app")
}
